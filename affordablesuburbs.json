{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 500,
  "title": "Victoria's Most Expensive Housing Suburbs",
  "data": {
    "url": "https://raw.githubusercontent.com/JaredNgu/assignment2/main/cheapestsuburbs.csv"
  },
  "selection": {
 "continent_highlight": {
 "type": "multi",
 "fields": ["Region"],
 "bind": "legend"
 }
 },

  "mark": "bar",
  "encoding": {
    "x": {"field": "Suburbs", "type": "nominal", "axis": {"labelAngle": 0}},
    "y": {"field": "Average of Price", "type": "quantitative"},
    "color": {"field": "Region", "type": "nominal"},
  "opacity": {
          "condition": {"selection": "continent_highlight", "value": 1.0},
          "value": 0.2
 }
}
}
